<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <!-- Changeset для создания таблицы Address -->
    <changeSet author="your-username" id="1">
        <createTable tableName="address">
            <column name="id" type="int">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="street" type="varchar(255)">
                <constraints nullable="true"/>
            </column>
            <column name="house" type="int">
                <constraints nullable="true"/>
            </column>
        </createTable>
    </changeSet>

    <!-- Changeset для создания последовательности (если нужно для автоматической генерации id) -->
    <changeSet author="your-username" id="2">
        <createSequence sequenceName="address_id_seq" startValue="1"/>
    </changeSet>

</databaseChangeLog>
