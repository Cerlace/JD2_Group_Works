<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.0.xsd">

    <changeSet id="courses-auto-increment" author="Daniil Nesterov">
        <sql>SET FOREIGN_KEY_CHECKS = 0;</sql>
        <addAutoIncrement tableName="courses" columnName="id" columnDataType="int"/>
        <addAutoIncrement tableName="grades" columnName="id" columnDataType="int"/>
        <addAutoIncrement tableName="students" columnName="id" columnDataType="int"/>
        <addAutoIncrement tableName="tasks" columnName="id" columnDataType="int"/>
        <addAutoIncrement tableName="teachers" columnName="id" columnDataType="int"/>
        <sql>SET FOREIGN_KEY_CHECKS = 1;</sql>
    </changeSet>
</databaseChangeLog>