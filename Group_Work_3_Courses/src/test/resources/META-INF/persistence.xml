<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="academy">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>itacademy.entity.Course</class>
        <class>itacademy.entity.Grade</class>
        <class>itacademy.entity.Student</class>
        <class>itacademy.entity.Task</class>
        <class>itacademy.entity.Teacher</class>
        <properties>
            <property name="javax.persistence.jdbc.driver" value="org.h2.Driver"/>
            <property name="javax.persistence.jdbc.url"
                      value="jdbc:h2:./test;MODE=MySQL"/>
            <property name="javax.persistence.jdbc.user" value="sa"/>
            <property name="javax.persistence.jdbc.password" value=""/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>

            <property name="hibernate.temp.use_jdbc_metadata_defaults" value="false"/>

            <property name="hibernate.dialect.storage_engine" value="myisam"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.connection.pool_size" value="10"/>
            <property name="hibernate.connection.isolation" value="2"/>
        </properties>
    </persistence-unit>
</persistence>